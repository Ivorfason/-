<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/hotelnemu1" >

    <Button
        android:id="@+id/qingfenghotel"
        android:layout_width="85dp"
        android:layout_height="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="6dp" 
        android:background="@android:color/transparent" />

    <Button
       android:id="@+id/Tell1"
       android:layout_width="60dp"
       android:layout_height="53dp"
       android:layout_toRightOf="@+id/qingfenghotel" 
       android:background="@android:color/transparent" />

    <Button
       android:id="@+id/yixinhotel"
       android:layout_width="85dp"
       android:layout_height="53dp"
       android:layout_marginLeft="9dp"
       android:layout_marginTop="6dp"
       android:layout_toRightOf="@+id/Tell1" 
       android:background="@android:color/transparent" />

    <Button
       android:id="@+id/Tell2"
       android:layout_width="60dp"
       android:layout_height="53dp"
       android:layout_toRightOf="@+id/yixinhotel" 
       android:background="@android:color/transparent" 
       />

    <Button
       android:id="@+id/Tell5"
       android:layout_width="60dp"
       android:layout_height="53dp"
       android:layout_below="@+id/Tell3"
        android:layout_marginTop="53dp"
       android:layout_toRightOf="@+id/fengqianghotel" 
       android:background="@android:color/transparent" 
       />

    <Button
       android:id="@+id/yadinghotel"
       android:layout_width="85dp"
       android:layout_height="53dp"
       android:layout_marginLeft="9dp"
       android:layout_marginTop="53dp"
       android:layout_below="@+id/bianhotel"
       android:layout_toRightOf="@+id/Tell5" 
       android:background="@android:color/transparent" />

    <Button
       android:id="@+id/Tell6"
       android:layout_width="60dp"
       android:layout_height="53dp"
       android:layout_below="@+id/Tell4"
        android:layout_marginTop="53dp"
       android:layout_toRightOf="@+id/yadinghotel" 
       android:background="@android:color/transparent" 
       />

    <Button
        android:id="@+id/Tell3"
        android:layout_width="60dp"
        android:layout_height="53dp"
        android:layout_below="@+id/qingfenghotel"
        android:layout_marginTop="63dp"
        android:layout_toLeftOf="@+id/bianhotel"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/Tell4"
        android:layout_width="60dp"
        android:layout_height="53dp"
        android:layout_above="@+id/Tell5"
        android:layout_alignRight="@+id/Tell2"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/bianhotel"
        android:layout_width="85dp"
        android:layout_height="53dp"
        android:layout_above="@+id/Tell5"
        android:layout_toRightOf="@+id/Tell5"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/shashahotel"
        android:layout_width="85dp"
        android:layout_height="53dp"
        android:layout_above="@+id/Tell5"
        android:layout_alignLeft="@+id/qingfenghotel"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/fengqianghotel"
        android:layout_width="85dp"
        android:layout_height="53dp"
        android:layout_alignBaseline="@+id/Tell5"
        android:layout_alignBottom="@+id/Tell5"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent" />
   
</RelativeLayout>

